@model IEnumerable<BigShool.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Course List</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Lecturer ID
        </th>
        <th>
            Lecturer Name
        </th>
        <th>
            Place
        </th>
        <th>
            Date
        </th>
        <th>
            Category ID
        </th>
        <th>
            Category Name
        </th>
        <th>Going.?</th>
        <th>Flowing.?</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.LecturerId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Place)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    @if (item.IsLogin == true)
    {
        if (item.IsGoing == true)
        {
            <td><button data-course-id="@item.Id" type="button" class="btn btn-info js-tongle-attend">On Going</button></td>
        }
        else
        {
            <td><button data-course-id="@item.Id" type="button" class="btn btn-primary js-tongle-attend">Going</button></td>
        }

        if (item.IsFollowing == true)
        {
            <td><button data-course-id="@item.LecturerId" type="button" class="btn btn-info js-tongle-flow">On Following</button></td>
        }
        else
        {
            <td><button data-course-id="@item.LecturerId" type="button" class="btn btn-primary js-tongle-flow">Follow</button></td>
        }
    }
    else
    {
        <td><button type="button" class="btn btn-secondary">No Action</button></td>
        <td><button type="button" class="btn btn-secondary">No Action</button></td>
    }
    <td>
        @Html.ActionLink("Sửa", "Modify", new { id = item.Id }) |
        @Html.ActionLink("Xoá", "Remove", new { id = item.Id })
    </td>
</tr>
    }

</table>
